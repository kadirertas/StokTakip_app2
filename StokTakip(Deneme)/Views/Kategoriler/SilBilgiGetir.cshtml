
@model StokTakip_Deneme_.Models.Entity.Kategoriler



@{
    ViewBag.Title = "SilBilgiGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Kategori Silme Sayfası </h2>



<div class=" container ">



    @using (Html.BeginForm("Sil", "Kategoriler"))

    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.ID)
        <div class=" form-group">

            @Html.LabelFor(x => x.Kategori)
            @Html.DisplayFor(x => x.Kategori, new { @class = "form-control " })
        </div>
        <div class=" form-group">
            @Html.LabelFor(x => x.Aciklama)
            @Html.DisplayFor(x => x.Aciklama, new { @class = "form-control " })
        </div>
        <div>
            <button class=" btn btn-danger">Kategori sil </button>
            <a href="/Kategoriler/Index">Anasayfa</a>
        </div>

    }

</div>