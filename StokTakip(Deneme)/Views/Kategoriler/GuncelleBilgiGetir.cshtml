@model StokTakip_Deneme_.Models.Entity.Kategoriler
@{
    ViewBag.Title = "GuncelleBilgiGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategori Güncelleme</h2>

<div    class="container">
    <form action="/Kategoriler/Guncelle">

        <div class="form-group">
            <b>ID</b>

            @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
        </div>


        <div class="form-group">
            <b>Kategori</b>

            @Html.TextBoxFor(x => x.Kategori, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <b>Açıklama</b>

            @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
        </div>

        <div  class="form-group">
             <button class="btn btn-success"> Kategori Güncelle </button>
        </div>
    </form>

</div>

