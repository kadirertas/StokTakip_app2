@model StokTakip_Deneme_.Models.Entity.Birimler

@{
    ViewBag.Title = "GuncelleBilgiGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="container">
    <form action="/Birimler/Guncelle" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label for="ID"><b>ID</b></label>
            @Html.TextBoxFor(x => x.ID, new { @class = "form-control"})
        </div>

        <div class="form-group">
            <label for="Birim"><b>Birim</b></label>
            @Html.TextBoxFor(x => x.Birim, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label for="Aciklama"><b>Açıklama</b></label>
            @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success">Birim Güncelle</button>
        </div>
    </form>
</div>
