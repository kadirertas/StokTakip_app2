@model StokTakip_Deneme_.Models.Entity.Birimler

@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Birim Ekleme</h2>

<div class=" container">
    @using (Html.BeginForm("Ekle", "Birimler", FormMethod.Post))
    {
        <div class="form-group">

            @Html.LabelFor(x => x.Birim)

            @Html.TextBoxFor(x => x.Birim, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Birim, "", new { @class = " text-danger" })

        </div>

        <div class="form-group">

            @Html.LabelFor(x => x.Aciklama)

            @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Aciklama, "", new { @class = " text-danger" })

        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success">Birim Ekle</button>
        </div>



    }

</div>