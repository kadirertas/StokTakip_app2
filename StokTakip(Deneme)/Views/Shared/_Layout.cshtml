
@using StokTakip_Deneme_.ActiveFolder

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>ASP.NET MVC Stok Takip Otomasyonu</title>
    <!-- Bootstrap Core CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom Styles CSS -->
    <style>
       
        .navbar {
            background-color: #337ab7; 
        }

        body {
            background-color: #f0f0f0; 
        }

    
        .footer {
            background-color: #337ab7; 
            color: #ffffff; 
        }
    </style>
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar-static-top">
        <div class="container">

            <a class=" navbar-brand" href="#"> Stok Takip Otomasyonu </a>
            <button class=" navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="#navbarResponsive">     </button>
            <div class="collapse navbar-collapse" id=" navbarResponsive">
                <!--***-->
                <ul class="navbar-nav ml-auto">

                    <li class="nav-item px-lg-4 @Html.Active("Urunler","Index")">
                        <a class="nav-link" href="/Urunler/Index/">
                            Ürünler
                            <span class="sr-only">
                            </span>
                        </a>
                    </li>
                    @if (User.IsInRole("ceo"))
                    {
                        <li class=" nav-item">
                            <a class=" nav-link px-lg-4 @Html.Active("Kategoriler","Index")" href="/Kategoriler/Index/">Kategoriler</a>
                        </li>
                        <li class=" nav-item">
                            <a class=" nav-link px-lg-4 @Html.Active("Markalar","Index")" href="/Markalar/Index/">Markalar</a>
                        </li>


                    }
                    @if (User.IsInRole("ceo") || User.IsInRole("personel"))
                    {

                        <li class=" nav-item">
                            <a class=" nav-link px-lg-4 @Html.Active("Birimler","Index")" href="/Birimler/Index/">Birimler</a>
                        </li>

                    }


                    <li class=" nav-item">
                        <a class=" nav-link px-lg-4 " href="/Kullanicilar/Logout/">Çıkış Yap</a>
                    </li>
                    <li class=" nav-item">
                        <a class=" nav-link px-lg-4 " style=" color : white">@User.Identity.Name</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Content -->
    <div class="container" style="margin-top:20px;">
        <div class="row navbar-static-top">
            @RenderBody()
        </div>
    </div>

    <footer class="footer text-faded text-center py-xl-5 navbar-fixed-bottom">
        <div class="container">
            <p class="m-0 table-sm">Copyright &copy; Stok Takip Otomasyonu Web Sitesi</p>
        </div>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Core theme JS -->
    <script src="js/scripts.js"></script>
    <!-- Additional scripts -->
    @RenderSection("scripts", false)
</body>

</html>
