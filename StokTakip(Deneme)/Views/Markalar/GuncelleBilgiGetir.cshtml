

@model StokTakip_Deneme_.Models.Entity.Markalar 
@{
    ViewBag.Title = "GuncelleBilgiGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Marka Güncelleme Sayfası </h2>

<div class="container ">

    @using (Html.BeginForm("Guncelle", "Markalar"))

    {

        @Html.HiddenFor(x => x.ID)
        <div class=" form-group">
            @Html.LabelFor(x => x.Kategoriler.Kategori)
            @Html.DropDownListFor(x => x.KategoriID, (List<SelectListItem>)ViewBag.l, "---- Seçiniz ---- ", new { @class = "form-control" })
            @Html.ValidationMessageFor(x=>x.KategoriID, null , new {@class = "text-danger"})
        </div>

        <div class=" form-group">
            @Html.LabelFor(x => x.Marka)
            @Html.TextBoxFor(x => x.Marka, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Marka, null, new { @class = "text-danger" })
        </div>
        <div class=" form-group">
            @Html.LabelFor(x => x.Aciklama)
            @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Aciklama, null, new { @class = "text-danger" })
        </div>
         <div class=" form-group  ">

             <button class=" btn btn-success">Markayı Güncelle</button>
             <a href="/Markalar/Index">Ana Sayfa</a>
         </div>
    }
</div>